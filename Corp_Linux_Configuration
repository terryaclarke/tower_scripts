---
- hosts: New_Linux_Servers
   
  tasks: 
  - name: Install additional software
    yum:
     name: sssd samba-common-tools oddjob oddjob-mkhomedir adcli krb5-workstation openldap-clients 
     state: present
  
- name: Copy configuration files to new Linux installation
  copy:
    src: /var/lib/awx/projects/files_to_download/corp_domain/corp.krb5.conf
    dest: /etc/krb5.conf
    backup: yes
    
  copy:
    src: /var/lib/awx/projects/files_to_download/corp_domain/corp.chrony.conf
    dest: /etc/chrony.conf
    backup: yes
    
  copy:
    src: /var/lib/awx/projects/files_to_download/corp_domain/corp.ldap.conf
    dest: /etc/ldap.conf
    backup: yes  
    
  copy:
    src: /var/lib/awx/projects/files_to_download/corp_domain/corp.realmd.conf
    dest: /etc/realmd.conf
    backup: yes    
    
  copy:
    src: /var/lib/awx/projects/files_to_download/corp_domain/corp.smb.conf
    dest: /etc/samba/smb.conf
    backup: yes
    
  copy:
    src: /var/lib/awx/projects/files_to_download/corp_domain/corp.sudoers
    dest: /etc/corp.sudoers
    backup: yes  
    
 #Disable SElinux
sed -i 's/SELINUX=enforcing/SELINUX=disabled/g' /etc/selinux/config
setenforce 0

#Disable Firewall
systemctl stop firewalld
systemctl disable firewalld

#Remove virtual NIC
systemctl stop libvirtd
systemctl disable libvirtd

#configure sshd
sed -i 's/#AddressFamily any/AddressFamily inet/g' /etc/ssh/sshd_config

#configure snmp
sed -i 's/com2sec notConfigUser  default       public/com2sec notConfigUser  default       qwerty7/g' /etc/snmp/snmpd.conf
systemctl restart snmpd

echo "alias cls=clear" >> /etc/profile

authconfig --disablesmartcard --disablefingerprint --update

#Create custom.sh files
echo "alias cls=clear" >> /etc/profile.d/custom.sh
